@model List<VacaYAY.Models.ReturnRequestViewModel>
@{
    Layout = null;
}
@Html.AntiForgeryToken()
@foreach (var req in Model)
{
    <div class="card border" id="item-@req.RequestUID" >
        <div class="card-header" id="heading @req.RequestUID">
            <h5 class="mb-0">
                <button class="btn btn-link collapsed" value="@req.RequestUID" id="btnLink-@req.RequestUID" data-toggle="collapse" data-target="#@req.RequestUID" aria-expanded="false" aria-controls="heading @req.RequestUID">
                    New @req.RequestType request
                </button>
            </h5>
        </div>

        <div id="@req.RequestUID" class="collapse " aria-labelledby="heading @req.RequestUID" data-parent="#accordion">
            <div class="card-body" id="card-@req.RequestUID">

            </div>
        </div>
    </div>
}

<script>
    var url = '@Url.Action("GetRequest", "Request")';
    BindInnerButtonsForRequests(url);
</script>