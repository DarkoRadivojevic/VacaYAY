@{
    ViewBag.Title = "Employee";
}

<h2>@ViewBag.Title</h2>

<div class="col-md-10">
    <div class="row">
        @Html.AntiForgeryToken()
        <button type="button" class= "btn btn-default" onclick="func()"> Find by Name</button>
        <div id="cont"></div>
    </div>
    <div class="col-md-10" id="Form" style= "visibility:hidden">
        @Html.AntiForgeryToken()
        @Html.Partial("FindEmployees")
    </div>
</div>
<script>
    function func()
    {
        let tmp = document.getElementById("Form")
        tmp.style.visibility = "visible"
    }
</script>
@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}

