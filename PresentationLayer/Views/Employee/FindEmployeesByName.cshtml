@model VacaYAY.Models.FindByNameViewModel
@{
    ViewBag.Title = "FindEmployees";
}

<h2>Find Employees</h2>
@using (Html.BeginForm("FindEmployeesByName", "Employee", FormMethod.Get, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Find employee by Name or surname</h4>
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class=" form-group">
        @Html.LabelFor(m => m.EmployeeName, new { @class = "col-md-2 control label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.EmployeeName, new { @class = "form-control" })
        </div>
    </div>
    <div class=" form-group">
        @Html.LabelFor(m => m.EmployeeSurname, new { @class = "col-md-2 control label" })
        <div class=" = col-md-10">
            @Html.TextBoxFor(m => m.EmployeeSurname, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class=" col-md-offset-2 col-md-2">
            <input type="submit" class="btn btn-default" value="Find" />
        </div>
    </div>
}

@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}

