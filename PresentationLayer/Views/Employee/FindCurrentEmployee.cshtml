@model VacaYAY.Models.ReturnEmployeeViewModel
@{
    Layout = null;
}
@Html.Hidden("EmployeeUID", Model.EmployeeUID)
@Html.Hidden("getEmployeeAction", Url.Action("GetEmployee", "Employee"))
@Html.AntiForgeryToken()

<ul class="nav navbar-nav ml-auto">
    <li class="nav-item"><div class="text-white">Welcome: @Model.EmployeeName @Model.EmployeeSurname</div></li>
    <li class="nav-item"><div class="text-white">Your backlog days: @Model.EmployeeBacklogDays</div></li>
    <li class="nav-item"><button class="btn btn-block btn-sm" id="showRequestForm" value='@Model.EmployeeUID'><span class="small">New request</span></button></li>
</ul>

<script>
    var url = "@Url.Action("AddRequestView", "Request")";
    BindActionToRequestForm(url);
</script>
